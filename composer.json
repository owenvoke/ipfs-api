{
    "name": "openwse/ipfs-api",
    "type": "library",
    "authors": [
        {
            "name": "openwse",
            "email": "openwse@gmail.com"
        }
    ],
    "description": "A minimal implementation of IPFS API",
    "keywords": [
        "ipfs",
        "ipfs-api",
        "api",
        "decentralized"
    ],
    "homepage": "https://github.com/openwse/ipfs-api",
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10.11",
        "phpunit/phpunit": "^9.5.4",
        "vlucas/phpdotenv": "^5.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {},
    "autoload": {
        "psr-4": {
            "Ipfs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ipfs\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "tests": [
            "@php ./vendor/bin/phpunit --verbose"
        ],
        "lint": [
            "@php ./vendor/bin/php-cs-fixer fix --dry-run",
            "@php ./vendor/bin/phpmd src ansi phpmd.ruleset.xml",
            "@php ./vendor/bin/phpstan analyse --ansi"
        ]
    }
}
